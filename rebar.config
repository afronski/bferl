{ct_opts, [{ct_hooks, [cth_readable_shell]}]}.

{dialyzer, [
  {warnings, [unmatched_returns, error_handling, race_conditions, underspecs]},
  {get_warnings, true},
  {base_plt_apps, [compiler]}
]}.

{deps, [
  {recon, {git, "https://github.com/ferd/recon.git", {branch, "master"}}}
]}.

{profiles, [
  {test, [
    {deps, [
      {cth_readable, {git, "https://github.com/ferd/cth_readable.git", {branch, "master"}}},
      {proper, {git, "https://github.com/manopapad/proper.git", {tag, "v1.1"}}}
    ]},

    {cover_enabled, true},
    {erl_opts, [debug_info]}
  ]}
]}.

{validate_app_modules, true}.
